{
  "Logging": {
    "LogLevel": {
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=host.docker.internal;Port=${POSTGRES_PORT};Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}"
  },

  "RabbitMq": {
    "HostName": "mq",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672
  },

  "Executor": {
    "Timeouts": {
      "QueryTimeout": "00:00:15",
      "ResourceRequestTimeout": "00:00:30",
      "CompilationTimeout": "00:01:00",
      "ExecutionTimeout": "00:00:30",
      "VmLaunchTimeout": "00:055:00"
    },

    "Resources": {
      "ExecutorVcpuCount": 1,
      "ExecutorMemoryMb": 256,
      "CompilerVcpuCount": 2,
      "CompilerMemoryMb": 2048
    },

    "Pool": {
      "TrackingPeriod": "00:10:00",
      "PollingFrequency": "00:00:15",
      "DefaultCompilerCacheTarget": 1,
      "DefaultExecutorCacheTarget": 5,
      "OrphanPoolSize": 5
    },

    "Cluster": {
      "TotalMemoryMb": 8192,
      "TotalVcpuCount": 8,
      "MaxVcpuOversubscription": 1.5
    }
  },

  "HealthCheck": {
    "FileHashes": [
      "/app/main.py",
      "/usr/bin/python3",
      "/etc/init.d/entrypoint",
      "/etc/resolv.conf",
      "/etc/apk/repositories"
    ]
  },
  
  "CompilerManager": {
    "DefaultCompilerCount": 1,
    "WorkerThreadCount": 1,
    "PollingFrequencyMs" : 25
  },
  "PoolerConfig": {
    "TrackingPeriodMinutes": 10,
    "PollingFrequencySeconds": 15,
    "DefaultCompilerCacheTarget": 1,
    "DefaultExecutorCacheTarget" : 5
  }
}